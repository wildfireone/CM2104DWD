<!-- views/pages/about.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
<div class="row">
    <div class="col-sm-8">
        <div class="jumbotron">
            <h1><%= student.name %></h1>
            <h2><%= student.username %></h2>
            <p><%= student.info %></p>
        </div>
    </div>

    <div class="col-sm-4">
        <div class="well">
            <h3>Details</h3>
            <img src = "<%= student.img %>"/>
            <p><%= student.location %></p>
            <p><%= student.age %></p>

        </div>
    </div>

</div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
